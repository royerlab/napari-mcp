[run]
source = src/napari_mcp
branch = True
parallel = True
concurrency = multiprocessing,thread
omit =
    */tests/*
    */_version.py
    */conftest.py
    */setup.py
    */__pycache__/*
    */.tox/*
    */.venv/*

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

ignore_errors = True
precision = 2
show_missing = True
skip_covered = False
skip_empty = True

[html]
directory = htmlcov

[xml]
output = coverage.xml

[paths]
source =
    src/napari_mcp
    */site-packages/napari_mcp
